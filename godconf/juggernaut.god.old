# run with:  god -c /path/to/file/juggernaut.god
# 
# Keeps Juggernaut server running

JNT_RailsRoot = "/home/angelbob/rails/railsmud/"
jnt_bin = "/usr/local/bin/juggernaut"
jnt_config = JNT_RailsRoot + "conf/juggernaut.yml"

God.watch do |w|
  w.name = "juggernaut"
  w.interval = 30.seconds # default      
  w.start = "#{jnt_bin} -c #{jnt_config}"
  w.stop = "killall juggernaut"
  w.start_grace = 10.seconds
  w.restart_grace = 10.seconds

  w.behavior(:clean_pid_file)

  w.start_if do |start|
    start.condition(:process_running) do |c|
      c.interval = 5.seconds
      c.running = false
    end
  end

  # lifecycle
  w.lifecycle do |on|
    on.condition(:flapping) do |c|
      c.to_state = [:start, :restart]
      c.times = 5
      c.within = 5.minute
      c.transition = :unmonitored
      c.retry_in = 10.minutes
      c.retry_times = 5
      c.retry_within = 2.hours
    end
  end
end
